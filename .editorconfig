# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.css]
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true


[*.tsx]
quote_type = single
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[package.json]
indent_style = tab
indent_size = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false
